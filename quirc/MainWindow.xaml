<mui:ModernWindow x:Class="FirstFloor.ModernUI.App.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  xmlns:app="clr-namespace:FirstFloor.ModernUI.App"
                  Title="quirc - quick IRC client" IsTitleVisible="True"
                  ContentSource="/Pages/UserAuth.xaml"
                  Width="800" Height="700">

    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="Contribute to the project" Source="https://github.com/firstfloorsoftware/mui/wiki" />
    </mui:ModernWindow.TitleLinks>

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="profile">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="log in" Source="/Pages/UserAuth.xaml" />
                <mui:Link DisplayName="Modern controls" Source="/Pages/BasicPage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="chats">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Active chats" Source="/Pages/ActiveChatsList.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>